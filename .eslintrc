{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest/globals": true
    },
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": ["error", {
          "singleQuote": true,
          "trailingComma": "es5",
          "tabWidth": 2
        }],
        "react/prop-types": "warn",
        "react/jsx-filename-extension": "off",
        "react/prefer-stateless-function": "off",
        "react/display-name": "warn"
    },
    "plugins": ["prettier", "react", "jest"],
    "globals": {
        "localStorage": true,
        "Promise": true,
        "config": true,
        "PLUGINS": true,
        "context": true,
        "before": true,
        "document": true
    }
}
